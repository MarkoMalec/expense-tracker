generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mysql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model UserSettings {
  userId          String   @id
  currency        String
  initialBalance  Float    @default(0)
  billingCycleDay Int      @default(1) // Day of month when billing cycle starts (1-28)
  preferredView   String   @default("calendar") // "calendar" or "billing"
  savingsGoal     Float    @default(0) // Monthly savings goal amount
  createdAt       DateTime @default(now())
}

model Category {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  name        String
  userId      String
  icon        String
  type        String   @default("income")
  description String?

  transactions Transaction[]

  @@unique([name, userId, type])
}

model Transaction {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updateAt  DateTime @default(now())

  amount      Float
  description String
  date        DateTime
  userId      String
  type        String   @default("income")

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
}

model MonthHistory {
  userId  String
  day     Int
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([day, month, year, userId])
}

model YearHistory {
  userId  String
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([month, year, userId])
}

model AIChatMessage {
  id          String   @id @default(uuid())
  userId      String
  messageId   String   // The message ID from the AI SDK
  role        String   // "user" or "assistant"
  content     String   @db.Text // JSON stringified message parts
  toolName    String?  // Name of the tool used (if assistant message)
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([userId, timestamp])
  @@unique([userId, messageId])
}

model DashboardLayout {
  userId      String   @id
  cardOrder   String   @db.Text // JSON array of card IDs in order
  collapsed   String   @db.Text // JSON array of collapsed card IDs
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}
